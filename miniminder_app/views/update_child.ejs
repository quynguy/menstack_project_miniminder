
<!-- include header begin -->
<%- include('include/_header')%>
<!-- include header end -->


  <!-- main site begin -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav-d-flex-justify-between">
            <a href="/admin-child"><i class="fas fa-angle-double-left"></i>All Child</a>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark"> Update Child Profile </h2>    
            <span class="text-light"> Fill in the form below to update an existing child profile </span>
        </div>

        <!-- form handling-->
        <form method="POST" id="add_child">
            <div class="new_child">
                <div class="form-group">
                    <label for="name" class="text-light"> Name </label>
                    <input type="hidden" name="id" value="">
                    <input type="text" name="name" value="" placeholder="Jane Smith">
                </div>

                <div class="form-group">
                    <label for="email" class="text-light"> Email </label>
                    <input type="text" name="email" value="" placeholder="example@gmail.com">
                </div>

                <div class="form-group">
                    <label for="contact-number" class="text-light"> Contact Number </label>
                    <input type="text" name="contact-number" value="" placeholder="123-456-7890">
                </div>

                <div class="form-group">
                    <label for="job-title" class="text-light"> Position </label>
                    <input type="text" name="job-title" value="" placeholder="Teacher">
                </div>

                <div class="form-group">
                    <label for="birthday" class="text-light"> Date Of Birth </label>
                    <input type="text" name="birthday" value="" placeholder="02/14/1991">
                </div>

                <div class="form-group">
                    <label for="gender" class="text-light"> Gender </label>
                    <div class="radio inline">
                        <input type="radio" id="radio-2" name="gender" value="Male">
                        <label for="radio-2" class="radio-label"> Male </label>
                    </div>

                    <div class="radio inline">
                        <input type="radio" id="radio-3" name="gender" value="Female">
                        <label for="radio-3" class="radio-label"> Female </label>
                    </div>
                </div>

                
                <div class="form-group">
                    <label for="status" class="text-light"> Status </label>
                    <div class="radio inline">
                        <input type="radio"  id="radio-4" name="status" value="Active">
                        <label for="radio-4" class="radio-label"> Active </label>
                    </div>

                    <div class="radio inline">
                        <input type="radio" id="radio-5" name="status" value="Inactive">
                        <label for="radio-5" class="radio-label"> Inactive </label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn text-dark update "> Save</button>

                </div>

            </div>
        </form>




<!-- include footer begin -->
<%- include('include/_footer')%>
