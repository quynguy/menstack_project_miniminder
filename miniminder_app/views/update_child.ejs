
<head>
    <link rel="stylesheet" href="/miniminder_app/assets/css/update.css">
</head>


  <!-- main site begin -->
  <main id="site-main-update">
    <div class="container">
        <div class="box-nav-d-flex-justify-between">
            <a href="/admin-child"><i class="fas fa-angle-double-left"></i>All Child</a>
        </div>
        <div class="form-title text-center update-child">
            <h2 class="text-dark"> Update Child Profile </h2>    
            <span class="text-light"> Fill in the form below to update an existing child profile </span>
        </div>

         <!-- form handling-->
         <form method="POST" id="update_child">
            <div class="edit_child">
                <div class="form-group">
                    <label for="name" class="text-light"> Child Name </label>
                    <input type="hidden" name="id" value="">
                    <input type="text" name="name" value="" >
                </div>

                <div class="form-group">
                    <label for="birthday" class="text-light"> Date Of Birth </label>
                    <input type="text" name="birthday" value="" >
                </div>


                <div class="form-group">
                    <label for="email" class="text-light"> Parent's Name  </label>
                    <input type="text" name="email" value="">
                </div>

                <div class="form-group">
                    <label for="contact-number" class="text-light"> Contact Number </label>
                    <input type="text" name="contact-number" value="">
                </div>

                <div class="form-group">
                    <label for="contact-number" class="text-light"> Assigned Teacher </label>
                    <input type="text" name="contact-number" value="">
                </div>

                <div class="form-group">
                    <label for="gender" class="text-light"> Gender </label>
                    <div class="radio inline">
                        <input type="radio" id="radio-2" name="gender" value="Male">
                        <label for="radio-2" class="radio-label"> Male </label>
                    </div>

                    <div class="radio inline">
                        <input type="radio" id="radio-3" name="gender" value="Female">
                        <label for="radio-3" class="radio-label"> Female </label>
                    </div>
                </div>


                <div class="form-group">
                    <button type="submit" class="btn text-dark update "> Save</button>

                </div>

            </div>
        </form>




<!-- include footer begin -->
<%- include('include/_footer')%>
