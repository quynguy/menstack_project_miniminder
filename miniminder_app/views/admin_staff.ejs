
<!-- include header begin -->
<%- include('include/_header')%>
<!-- include header end -->


     <!-- main site begin -->
     <main id="site-main">
        <div class="container">
            <div class="box-nav-d-flex-justify-between">
                <a href="/add-staff">
                    <span class="text-gradient"> New Staff <i class="fa-regular fa-user"></i> </span>
                </a>
            </div>

             <!-- form handling-->
             <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Full Name</th>
                            <th>Email Address</th> 
                            <th>Contact Number</th> 
                            <th>Job Title</th> 
                            <th>Gender</th>
                            <th>Date Of Birth</th>
                            <th>Status</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>

                    <tbody>
                        <%staffList.forEach(staff => {%>
                            <tr>
                                <th scope="row"><%= staff._id %></th>
                                <td><%= staff.name %></td>
                                <td><%= staff.email %></td>
                                <td><%= staff.number %></td>
                                <td><%= staff.position %></td>
                                <td><%= staff.birthday %></td>
                                <td><%= staff.gender %></td>
                                <td><%= staff.status %></td>

                                <td>
                                    <a href="/update-staff/<%= staff._id %>" class="btn border-shadow update">
                                        <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                                    </a>
                                </td>
                                <td>
                                    <a href="/delete-staff/<%= staff._id %>" class="btn border-shadow delete">
                                        <span class="text-gradient"><i class="fas fa-times"></i></span>
                                    </a>
                                </td>
                                
                            </tr>
                        <%})%> 
                        </tbody>

 

                </table>
            </form>
        </div>
    </main>
    <!-- main site end -->


<!-- include footer begin -->
<%- include('include/_footer')%>
<!-- include footer end -->